@using Microsoft.AspNetCore.Identity
@using Sciv.Models
@model User
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<h2>Delete account</h2>

<br />
<form asp-action="Delete" asp-controller="Account">
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" dirname="firsName" value="@ViewBag.UserName" readonly>
    </div>
    <div class="form-group">
        <label>First name</label>
        <input type="text" class="form-control" name="firstName" dirname="firsName" value="@ViewBag.FirstName" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label">Last name</label>
        <input type="text" class="form-control" name="lastName" value="@ViewBag.LastName" readonly>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" value="@ViewBag.UserEmail" readonly>
    </div>
    <button type="submit" class="btn btn-primary">Confirm delete</button>
    <button asp-action="Details" class="btn btn-secondary">Cancel</button>
</form>
