
<form action="/Post/Create" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="title" placeholder="Post Title">
    </div>
    <div class="mb-3">
        <label class="form-label">Post</label>
        <textarea type="text" class="form-control" name="content" placeholder="Post Content" id="content" rows="4"></textarea>
    </div>
    <input type="hidden" name="topicID" value="@ViewBag.CurrentTopicID" />
    <button type="submit" class="btn btn-primary">Create Post</button>
    <a href="/Topic/@ViewBag.CurrentTopicID" class="btn btn-secondary">Cancel</a>
</form>

